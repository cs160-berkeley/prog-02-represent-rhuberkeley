<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoImageView"
        android:src="@drawable/replogo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please provide a location:"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/instructionTextView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/logoImageView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a zip code"
        android:id="@+id/zipCodeButton"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/currentLocButton"
        android:layout_alignEnd="@+id/currentLocButton"
        android:layout_below="@+id/instructionTextView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use current location"
        android:id="@+id/currentLocButton"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/zipCodeButton" />

</RelativeLayout>
